.page-header.btn-toolbar
	= link_to t('comfy.admin.gallery.galleries.index_branch.photos'), comfy_admin_gallery_photos_path(@site, @gallery), :class => 'btn btn-default pull-right'

	- if defined?(ComfortableMexicanSofa)
		= link_to t('comfy.admin.cms.pages.edit.revision', :count => @gallery.revisions.count), comfy_admin_gallery_revisions_path(@site, @gallery), :class => 'btn btn-default pull-right'
		
	%h2= t('comfy.admin.gallery.galleries.editing') + " #{@gallery.title}"

- if defined?(ComfortableMexicanSofa)
	- content_for :right_column do
		= render 'comfy/admin/cms/sites/mirrors', :object => @gallery

= comfy_gallery_form_for @gallery, :as => :gallery, :url => {:action => :update} do |form|
	= render form
