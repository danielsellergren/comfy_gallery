- photo      ||= index_branch

%li{:id => dom_id(photo)}
	.item
		.icon
			.dragger
				=gallery_image_tag(photo, :admin_thumb, {class: 'thumb'})
		=photo.title
		.item-meta
			=photo.url
		.item-meta
			=photo.description
		.item-meta
			=photo.tags.nil? ? '' : photo.tags.join(', ')


		.btn-group.btn-group-sm
			-# = link_to "Crop", crop_comfy_admin_gallery_photo_path(@site, @gallery, photo), :class => 'btn btn-default'   if photo.force_aspect?
			= link_to t('.edit'), edit_comfy_admin_gallery_photo_path(@site, @gallery, photo), :class => 'btn btn-default'
			= link_to t('.delete'), comfy_admin_gallery_photo_path(@site, @gallery, photo), :method => :delete, :data => {:confirm => 'Are you sure?'}, :class => 'btn btn-danger'
    
