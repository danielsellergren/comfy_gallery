
.page-header
	= link_to t('comfy.admin.gallery.photos.return_to_galleries'), comfy_admin_galleries_path(@site)

	= link_to t('comfy.admin.gallery.photos.add_new'), new_comfy_admin_gallery_photo_path(@site, @gallery), :class => 'btn btn-default pull-right'
	%h2= t('comfy.admin.gallery.photos.photos_for')+ " #{@gallery.title}"
	- if @photos.count > 0
		%h5= t('comfy.admin.gallery.photos.photos', count: @photos.length)

- if defined?(ComfortableMexicanSofa)
	- content_for :right_column do
		= render 'comfy/admin/cms/sites/mirrors'

	= render 'comfy/admin/cms/partials/layouts_before'

%ul.list.sortable{:id => 'gallery', :class => 'gallery'}
	= render :partial => 'index_branch', :collection => @photos

- if defined?(ComfortableMexicanSofa)
	= render 'comfy/admin/cms/partials/layouts_after'

