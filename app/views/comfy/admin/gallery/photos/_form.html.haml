=form.text_field :title
-if @photo.image? && @photo.id.present?
	-# Get a url that blows up after so many seconds
	.form-group
		%label.control-label.col-sm-2= t('comfy.admin.gallery.photos.image')
		.div.col-sm-10
			= gallery_image_tag(@photo, :admin_full)
	- label = t('comfy.admin.gallery.photos.replace_image')
- else
	- label = t('comfy.admin.gallery.photos.image')

.form-group
	%label.control-label.col-sm-2= label
	.div.col-sm-10
		= file_field '', :image, :multiple => false

= form.text_field :url
= form.text_area :description, :class => 'short'

= form.submit
